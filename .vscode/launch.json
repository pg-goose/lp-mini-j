    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug REPL",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/g.py",
            "justMyCode": true
        },
        {
            "name": "Debug .j execution",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/g.py",
            "args": [
                "debug.j"
            ],
            "justMyCode": false
        }
    ]
}